<VirtualHost *:{{ http_port | default(80) }}>
   
   ServerAdmin {{ mail_address | default("webmaster@localhost") }}
   DocumentRoot {{ doc_root_location | default("/var/www/html") }}


<Directory {{ doc_root_location | default("/var/www/html") }}>
DirectoryIndex index.php index.html index.shtml
</Directory>


	ErrorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
